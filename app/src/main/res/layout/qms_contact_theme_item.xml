<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?bottom_separator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:textAppearance="?android:textAppearanceLarge">

    <FrameLayout
        android:id="@+id/image_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/txtIsNew"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:lines="4"
            android:minLines="4"
            android:scaleType="centerCrop"
            android:text="|||"
            android:textAppearance="?android:textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="8.0dip">

            <CheckBox
                android:id="@+android:id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checkMark="?android:listChoiceIndicatorMultiple"
                android:focusable="false"
                android:visibility="visible"
                android:layout_marginRight="8dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNick"
                    style="?list_text_general_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="slartus"
                    android:textAppearance="?android:textAppearanceMedium" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">


                    <TextView
                        android:id="@+id/txtDateTime"
                        style="?list_text_minor_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ррр"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/txtMessagesCount"
                        style="?list_text_minor_color"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:ellipsize="middle"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="12"
                        android:textAppearance="?android:textAppearanceSmall" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>